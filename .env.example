# MongoDB Configuration
# Replace these values with your actual MongoDB Atlas credentials
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/?appName=Cluster0
MONGODB_DATABASE=quant_suite

# API Keys
# Get your Alpha Vantage API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Polygon.io API key (optional)
POLYGON_API_KEY=your_polygon_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Backtesting Parameters
INITIAL_CAPITAL=10000
COMMISSION_RATE=0.001

# Data Update Frequency
DATA_UPDATE_HOUR=18  # 6 PM UTC

# Streamlit Dashboard
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security
SECRET_KEY=your_secret_key_here_generate_a_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
